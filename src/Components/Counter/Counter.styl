@import "../src/_theme.styl"

.counter
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 999px;
  font-family: Arial, sans-serif;
  font-size: 10px
  text-align: center;
  box-sizing: border-box


.counter--primary
  background-color: var(--counter-primary-bg)
  color: var(--counter-primary-color)
  --current-pulse-color: var(--counter-primary-bg)

.counter--secondary
  background-color: var(--counter-secondary-bg)
  color: var(--counter-secondary-color)
  --current-pulse-color: var(--counter-secondary-bg)

.counter--size-8
  min-width: 8px
  height: 8px

.counter--size-12
  min-width: 12px
  height: 12px

.counter--size-16
  min-width: 16px
  height: 16px
  padding: 0 4px

.counter--size-20
  min-width: 20px
  height: 20px
  padding: 0 4px

.counter--size-24
  min-width: 24px
  height: 24px
  padding: 0 6px


.counter--stroke
  border-style: solid

.counter--size-8.counter--stroke
  border-width: 1px;

.counter--size-12.counter--stroke
  border-width: 2px;

.counter--size-16.counter--stroke
  border-width: 2px;

.counter--size-20.counter--stroke
  border-width: 2px;

.counter--size-24.counter--stroke
  border-width: 3px;


.counter--bordercolor-dynamic
  border-color: var(--counter-border-dynamic);

.counter--bordercolor-surface
  border-color: var(--counter-border-surface);

.counter--bordercolor-base
  border-color: var(--counter-border-base);

.counter--bordercolor-secondary
  border-color: var(--counter-border-secondary);


.counter--pulse
  position: relative;

.counter--pulse-container
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

.counter--pulse-container .pulse
  position: absolute;
  border-radius: 999px;
  animation-name: dot-scale-fade;
  animation-iteration-count: infinite;
  animation-duration: 2s;
  background-color: var(--current-pulse-color)

.counter--pulse-container .pulse.two
  animation-delay: 0.25s;

@keyframes dot-scale-fade
  0%
    opacity: 0.5;
    transform: scale(1);
  50%
    opacity: 0;
    transform: scale(3);
  100%
    opacity: 0;
    transform: scale(3);
